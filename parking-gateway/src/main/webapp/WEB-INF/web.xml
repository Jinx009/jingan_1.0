<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Web App</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring.xml</param-value>
    </context-param>

    <listener>
        <listener-class>com.protops.gateway.filter.ApplicationListener</listener-class>
    </listener>

    <filter>
        <filter-name>NoCache</filter-name>
        <filter-class>com.protops.gateway.filter.CacheFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>no-store,no-cache,must-revalidate</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>CacheForWeek</filter-name>
        <filter-class>com.protops.gateway.filter.CacheFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>max-age=604800, public</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>CacheFor3Days</filter-name>
        <filter-class>com.protops.gateway.filter.CacheFilter</filter-class>
        <init-param>
            <param-name>Cache-Control</param-name>
            <param-value>max-age=259200, public</param-value>
        </init-param>
        <init-param>
            <param-name>Vary</param-name>
            <param-value>Accept-Encoding</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>Log4jFilter</filter-name>
        <filter-class>com.protops.gateway.filter.Log4jFilter</filter-class>
        <init-param>
            <param-name>customSessionId</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.protops.gateway.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>forcedEncoding</param-name>
            <param-value>ISO-8859-1</param-value>
        </init-param>
        <init-param>
            <param-name>forcedEncodingUrls</param-name>
            <param-value>
                <!-- Ant-style path patterns, multi-URL split with comma(,) -->
                /api/**
            </param-value>
        </init-param>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.protops.gateway.filter.SessionFilter</filter-class>
        <init-param>
            <param-name>statelessUrls</param-name>
            <param-value>
                <!-- Ant-style path patterns, multi-URL split with comma(,) -->
                /admin/alive.action
            </param-value>
        </init-param>
        <init-param>
            <param-name>sessionTimeout</param-name>
            <param-value>20</param-value><!-- minutes-->
        </init-param>
        <init-param>
            <param-name>sessionMapSize</param-name>
            <param-value>65536</param-value><!-- minutes-->
        </init-param>
    </filter>

    <servlet>
        <servlet-name>dispatch</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Forbidden</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
            <http-method>TRACE</http-method>
            <http-method>OPTIONS</http-method>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

    <filter-mapping>
        <filter-name>NoCache</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CacheForWeek</filter-name>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.swf</url-pattern>
        <url-pattern>*.ico</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CacheFor3Days</filter-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>Log4jFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>

    <servlet-mapping>
        <servlet-name>dispatch</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>1800</session-timeout>
    </session-config>


    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
</web-app>
